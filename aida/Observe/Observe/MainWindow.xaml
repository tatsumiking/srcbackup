<Window x:Class="Observe.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow"
        Height="1080" Width="910"
        Left="1010" Top="0"
        Topmost="True"
        Loaded="Window_Loaded"
        SizeChanged="Window_SizeChanged"
        MouseWheel="Window_MouseWheel"
        Closing="Window_Closing"
        Icon="Observe.ico"
        BorderBrush="#FF0062B1"
        BorderThickness="5">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <ComboBox x:Name="cmbGroup" Margin="5,2,0,0" Width="60" HorizontalAlignment="Left" VerticalAlignment="Top" SelectionChanged="cmbGroup_SelectionChanged"/>
            <ComboBox x:Name="cmbPlaceName" Margin="70,2,0,0" Width="130" HorizontalAlignment="Left" VerticalAlignment="Top" SelectionChanged="cmbPlaceName_SelectionChanged"/>
            <TextBlock Margin="205,5,0,0" Height="23" Width="30" Text="緯度" HorizontalAlignment="Left" VerticalAlignment="Top" Visibility="Hidden"/>
            <TextBox x:Name="txtLat" Text="35.0000" Margin="235,2,0,0" Width="80" Height="23" HorizontalAlignment="Left" VerticalAlignment="Top" Visibility="Hidden"/>
            <TextBlock Margin="325,5,0,0" Height="23" Width="30" Text="経度" HorizontalAlignment="Left" VerticalAlignment="Top" Visibility="Hidden"/>
            <TextBox x:Name="txtLnd" Text="156.0000" Margin="355,2,0,0" Width="80" Height="23" HorizontalAlignment="Left" VerticalAlignment="Top" Visibility="Hidden"/>
            <Button x:Name="btnMove" Content="移動" Margin="440,4,0,0" Width="50" VerticalAlignment="Top" HorizontalAlignment="Left" Click="btnMove_Click" Visibility="Hidden"/>
            <TextBlock x:Name="tbMsg" Height="24" Width="250" Margin="500,5,0,0" Text="TextBlock" HorizontalAlignment="Left" VerticalAlignment="Top" Visibility="Hidden"/>
        </Grid>
        <Grid Grid.Row="1">
            <Grid x:Name="gridDrawArea"
                  MouseDown="gridDrawArea_MouseDown"
                  MouseMove="gridDrawArea_MouseMove"
                  MouseUp="gridDrawArea_MouseUp">
                <Canvas x:Name="cnvsMapArea"/>
                <Canvas x:Name="cnvsMarkArea"/>
            </Grid>
        </Grid>
        <Grid Grid.Row="2">
            <TextBlock x:Name="tbLatLnd" Height="24" Width="400" Margin="0,3,0,0" Text="TextBlock" HorizontalAlignment="Left" VerticalAlignment="Top" Visibility="Hidden"/>
            <TextBlock x:Name="tbMouseCrt" Height="24" Width="400" Margin="400,3,0,0" Text="TextBlock" HorizontalAlignment="Left" VerticalAlignment="Top" Visibility="Hidden"/>
            <Button x:Name="btnExit" Content="終了" Margin="803,3,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="75" Click="btnExit_Click"/>
        </Grid>
    </Grid>
</Window>
